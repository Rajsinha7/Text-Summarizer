# code 2


"""
import streamlit as st
from transformers import pipeline
import wikipedia

# Load summarization model (cached for performance)
@st.cache_resource
def load_model():
    return pipeline("summarization", model="sshleifer/distilbart-cnn-12-6")

summarizer = load_model()

# Streamlit UI configuration
st.set_page_config(page_title="Text Summarizer", page_icon="üìù", layout="centered")

st.title("üìù AI Text Summarizer")
st.write("Paste your text below or fetch from Wikipedia and get a quick summary.")

# Input fields
text_input = st.text_area("Enter text here:", height=200)
wiki_topic = st.text_input("Or enter a Wikipedia topic:")

if st.button("Summarize"):
    if wiki_topic.strip():
        try:
            st.info(f"Fetching article for '{wiki_topic}' from Wikipedia...")
            # Set auto_suggest=False for precise matching
            page = wikipedia.page(wiki_topic, auto_suggest=False)
            article = page.content

            # Limit to first 3 paragraphs for speed and relevance
            limited_article = "\n".join(article.split("\n")[:3])

            with st.spinner("Generating summary from Wikipedia..."):
                summary = summarizer(limited_article, max_length=150, min_length=50, do_sample=False)

            st.subheader("Wikipedia Summary:")
            st.success(summary[0]['summary_text'])
            st.markdown(f"[üîó Read Full Wikipedia Article]({page.url})", unsafe_allow_html=True)

        except wikipedia.exceptions.DisambiguationError as e:
            st.error(f"Topic is ambiguous. Please be more specific! Suggested options: {e.options[:5]}")
        except wikipedia.exceptions.PageError:
            st.error("Page not found. Please check your topic spelling.")
        except Exception as e:
            st.error(f"Error: {e}")

    elif text_input.strip():
        with st.spinner("Generating summary from your text..."):
            summary = summarizer(text_input, max_length=100, min_length=30, do_sample=False)
        st.subheader("Summary:")
        st.success(summary[0]['summary_text'])

    else:
        st.warning("‚ö† Please enter some text or a Wikipedia topic.")

st.caption("Powered by Hugging Face Transformers &¬†Wikipedia¬†API")

"""



# code 3
""""
import streamlit as st
from transformers import pipeline
import wikipedia
import PyPDF2
from io import BytesIO

# -------------------- Load Model --------------------
@st.cache_resource
def load_model():
    return pipeline("summarization", model="sshleifer/distilbart-cnn-12-6")

summarizer = load_model()

# -------------------- App Config --------------------
st.set_page_config(page_title="AI Text Summarizer", page_icon="üìù", layout="wide")
st.title("üìù AI Text Summarizer")
st.write("Summarize text from **manual input**, **Wikipedia**, or **PDF files** in one place.")

# -------------------- Create 3 Columns --------------------
col1, col2, col3 = st.columns(3)

# -------- Column 1: Manual Text Summarization --------
with col1:
    st.subheader("‚úç Manual Text")
    manual_text = st.text_area("Enter your text:", height=200, key="manual_text")
    if st.button("Summarize Text"):
        if manual_text.strip():
            with st.spinner("Summarizing your text..."):
                summary = summarizer(manual_text, max_length=100, min_length=30, do_sample=False)
            st.success(summary[0]['summary_text'])
        else:
            st.warning("Please enter some text.")

# -------- Column 2: Wikipedia Summarization --------
with col2:
    st.subheader("üåê Wikipedia")
    wiki_topic = st.text_input("Enter Wikipedia topic:", key="wiki_topic")
    if st.button("Summarize Wikipedia"):
        if wiki_topic.strip():
            try:
                page = wikipedia.page(wiki_topic, auto_suggest=False)
                article = page.content
                limited_article = "\n".join(article.split("\n")[:3])
                with st.spinner("Fetching & summarizing from Wikipedia..."):
                    summary = summarizer(limited_article, max_length=150, min_length=50, do_sample=False)
                st.success(summary[0]['summary_text'])
                st.markdown(f"[Read Full Wikipedia Article]({page.url})", unsafe_allow_html=True)
            except wikipedia.exceptions.DisambiguationError as e:
                st.error(f"Topic is ambiguous. Suggested options: {e.options[:5]}")
            except wikipedia.exceptions.PageError:
                st.error("Page not found.")
            except Exception as e:
                st.error(f"Error: {e}")
        else:
            st.warning("Enter a Wikipedia topic.")

# -------- Column 3: PDF Summarization --------
with col3:
    st.subheader("üìÑ PDF")
    pdf_file = st.file_uploader("Upload a PDF file:", type=["pdf"], key="pdf_input")

    if st.button("Summarize PDF"):
        if pdf_file:
            try:
                pdf_reader = PyPDF2.PdfReader(BytesIO(pdf_file.read()))
                text = ""
                for page in pdf_reader.pages:
                    text += page.extract_text() or ""
                with st.spinner("Summarizing from PDF..."):
                    summary = summarizer(text, max_length=200, min_length=50, do_sample=False)
                st.success(summary[0]['summary_text'])
            except Exception as e:
                st.error(f"Error reading PDF: {e}")
        else:
            st.warning("Please upload a PDF file.")

st.caption("‚ö° Powered by Hugging Face Transformers, Wikipedia API, and PyPDF2")

"""


